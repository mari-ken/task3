<div class="col-md-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class: "info-img" %>

<table class="table">
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<div class="row">
  <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_26957" %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control title" %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br />
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
</div>