<div class="col-md-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100", class: "info-img" %>

<table class="table aaa">
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr class="table-borderless">
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <td>follows</td>
      <td><%=link_to @user.followeds.count, follows_user_path(@user.id) %></td>
    </tr>
    <tr>
      <td>followers</td>
      <td><%=link_to @user.followers.count, followers_user_path(@user.id) %></td>
    </tr>
  </tbody>
</table>

<% if current_user != @user %>
  <% if @user.followed_by?(current_user) %>
    <p><%=link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-success field" %></p>
    <% else %>
    <%=link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success field" %>
  <% end %>
<% end %>

<div class="row">
  <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_26957" %>
</div>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, class: "form-control title" %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br />
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
</div>