<%= render 'users/info', user: @user %>

<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |list| %>
      <tr id="post_<%= list.id %>">
        <%= render 'books/post', list: list %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>