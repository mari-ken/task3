<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/0e665b2cd6.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <span class="navbar-brand">Bookers</span>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <!-- ユーザーがログイン時 -->
        <li class="nav-item">
          <%= link_to "Home", new_user_registration_path, class: 'nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Users', new_user_registration_path, class: 'nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Books', new_user_registration_path, class: 'nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
        </li>
        <% else %>
        <!-- ユーザーが非ログイン時 -->
        <li class="nav-item">
          <%= link_to " Home", new_user_registration_path, class: 'fas fa-home nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to " About", new_user_session_path, class: 'fas fa-link nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to " sign up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>
        </li>
        <li class="nav-item">
          <%= link_to " login", new_user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>
        </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

    <%= yield %>
  </body>
</html>
