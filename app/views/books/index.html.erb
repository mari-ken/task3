<div class="col-md-12">
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
             count: @book.errors.count,
             resource: @book.class.model_name.human.downcase)
      %>
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>

<%= render 'users/info', user: @user %>
<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |list| %>
      <tr>
        <td><%= link_to attachment_image_tag(list.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40"),user_path(list.user)%></td>
        <td><%= link_to list.title, book_path(list.id) %></td>
        <td><%= list.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>