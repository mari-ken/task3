<td><%= link_to attachment_image_tag(list.user, :profile_image, fallback: "no_image.jpg", size: "40x40"),user_path(list.user)%></td>
<td><%= link_to list.title, book_path(list.id) %></td>
<td><%= list.body %></td>
<td>
  <% if list.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(list), method: :delete, remote: true, class: "fav-on" do %>
        ♥<%= list.favorites.count %>
      <% end %>
    </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(list), method: :post, remote: true, class: "fav-off" do %>
      ♥<%= list.favorites.count %>
    <% end %>
  </p>
  <% end %>
</td>
<td>コメント数：<%= list.book_comments.count %></td>